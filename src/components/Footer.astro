---
// components/Footer.astro
interface Props {
  brand?: string;
  email?: string;
  whatsappHref?: string; // usa wa.me o tu link directo
  whatsappHref_2?: string; // usa wa.me o tu link directo
  logoSrc?: string;
  privacyHref?: string;
}

const {
  brand = "Blue_Parking",
  email = "info@blueparking.com",
  whatsappHref = "https://wa.me/+541150252973?text=%C2%A1Hola!%20Quiero%20reservar%20una%20cochera.",
  whatsappHref_2 = "https://wa.me/+541133586597?text=%C2%A1Hola!%20Quiero%20reservar%20una%20cochera.",
  logoSrc = "/logo-blue-parking.webp",
  privacyHref = "/privacidad",
} = Astro.props as Props;
---

<footer class="bg-[var(--bp-ink-muted)] text-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- bloque superior -->
    <div class="py-6 md:py-8 text-center">
      <!-- LOGO con “plate” para que resalte -->
      <div class="logo-badge mx-auto  w-[8rem] h-[10rem] md:w-28">
        <img
          src={logoSrc}
          alt={brand}
          class="absolute h-[10rem] inset-2 object-contain drop-shadow-[0_4px_14px_rgba(0,0,0,.35)]"
          loading="lazy"
          decoding="async"
        />
      </div>

      <!-- título -->
      <h2 class="mt-4 text-xl md:text-[2.1rem] font-extrabold tracking-tight">
        Para reservas y más información
      </h2>

      <!-- acciones -->
      <div class="mt-6 flex flex-wrap items-center justify-center gap-3">
        <!-- Email -->
        <a
          href={`mailto:${email}`}
          class="inline-flex items-center gap-2 px-6 py-3 text-white font-semibold btn-accent  hover:bg-[var(--bp-primary)] hover:text-white"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 6h16a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2z"/>
            <path d="m22 8-10 6L2 8"/>
          </svg>
          {email}
        </a>

        <!-- WhatsApp -->
        <a
          href={whatsappHref}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 text-white font-semibold btn-accent  hover:bg-[var(--bp-primary)] hover:text-white"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12a9 9 0 0 1-12.9 8l-4.1 1.1 1.1-4.1A9 9 0 1 1 21 12z"/>
            <path d="M8.5 9.5c.7 1.6 2 2.9 3.6 3.6M14.5 12.5l-1.3.6a2 2 0 0 1-2.5-.5l-.7-.7"/>
          </svg>
          +54 11 5025-2973
        </a>

        <!-- WhatsApp -->
        <a
          href={whatsappHref_2}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 text-white font-semibold btn-accent  hover:bg-[var(--bp-primary)] hover:text-white"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12a9 9 0 0 1-12.9 8l-4.1 1.1 1.1-4.1A9 9 0 1 1 21 12z"/>
            <path d="M8.5 9.5c.7 1.6 2 2.9 3.6 3.6M14.5 12.5l-1.3.6a2 2 0 0 1-2.5-.5l-.7-.7"/>
          </svg>
          +54 11 3358-6597
        </a>
      </div>

      <p class="mt-6 text-sm text-white/85">
        Comunicate por WhatsApp o envianos un correo para conocer nuestras tarifas y disponibilidad.
      </p>

      <!-- <p class="mt-3 text-sm">
        <a
          href={privacyHref}
          class="font-medium text-[var(--bp-sky-light)] underline-offset-2 hover:underline"
        >Ver política de privacidad</a>
      </p> -->
    </div>

    <div class="border-t border-white/10"></div>

    <div class="py-6 text-center text-xs text-white/70">
      © {new Date().getFullYear()} {brand}. Todos los derechos reservados.
    </div>
  </div>

  <style>
    /* Medallón detrás del logo (mejora contraste) */
    .logo-badge{
      position:relative;
      border-radius:9999px;
      /* plato blanco con leve gradiente */
     /* aro + relieve */
      /* box-shadow:
        0 10px 28px rgba(0,0,0,.28),
        inset 0 1px 0 rgba(255,255,255,.55);
      outline: 5px solid color-mix(in srgb, var(--bp-primary) 25%, transparent); */
    }
    /* halo suave de color para “pop” */
    .logo-badge::after{
      content:"";
      position:absolute; inset:-14px;
      border-radius:inherit;
      background: radial-gradient(circle at 50% 50%,
        color-mix(in srgb, var(--bp-sky-light), transparent 70%) 0,
        transparent 60%);
      filter: blur(12px);
      opacity:.7;
      z-index:-1;
    }
  </style>
</footer>
