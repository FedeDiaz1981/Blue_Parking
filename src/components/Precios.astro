  <style>
    /* Banner unificado al pie de la tarjeta */
    .discount-banner {
      display: grid;
      place-items: center;
      text-align: center;
      background: var(--bp-accent);
      color: #111;
      font-weight: 700;
      font-size: 0.82rem;
      letter-spacing: 0.2px;
      border-radius: 12px;
      padding: 0.55rem 0.9rem;
      margin-top: 1rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    /* Animación de aparición */
    .reveal-card {
      opacity: 0;
      transform: translateY(24px) scale(0.98);
      filter: blur(2px);
      transition:
        opacity 0.9s ease,
        transform 0.9s ease,
        filter 0.9s ease;
      transition-delay: var(--d, 0ms);
    }
    .reveal-card.is-in {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  </style>

  <script is:inline>
    // Observa la sección y entra cuando el 50% sea visible, con stagger
    (function () {
      const section = document.getElementById("PRECIOS");
      if (!section) return;

      const cards = section.querySelectorAll(".reveal-card");

      const io = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && entry.intersectionRatio >= 0.5) {
              cards.forEach((c) => c.classList.add("is-in"));
              io.disconnect(); // solo una vez
            }
          });
        },
        { threshold: [0, 0.5, 1] }
      );

      io.observe(section);
    })();
  </script>
</section>
