  <style>
    .tag-discount {
      position: absolute;
      top: -10px;
      right: 12px;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      padding: 0.35rem 0.75rem 0.35rem 1rem;
      font-weight: 800;
      font-size: 0.7rem;
      letter-spacing: 0.3px;
      color: #111;
      background: var(--bp-accent);
      border-radius: 9999px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }
    .tag-discount::before {
      content: "";
      position: absolute;
      left: -6px;
      top: 50%;
      width: 12px;
      height: 12px;
      background: var(--bp-accent);
      transform: translateY(-50%) rotate(45deg);
      border-radius: 2px;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
